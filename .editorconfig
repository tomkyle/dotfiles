# editorconfig.org
root = true

[*]
indent_style = tab
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[{.gitignore,.gitignore_global}]
trim_trailing_whitespace = false

[*.{rb,json,css,less,scss}]
indent_style = space
indent_size = 2

[*.{py,php,html,tpl,yaml,yml,js}]
indent_style = space
indent_size = 4


[*.csv]
indent_style = tab
indent_size = 8

[*.md]
trim_trailing_whitespace = false

[{package.json,.travis.yml,.scrutinizer.yml}]
indent_style = space
indent_size = 2
