# ------------------------------------------------------------------------
# 1. Prepend Directories
# ------------------------------------------------------------------------

DOTFILES_PREPEND_PATHS=(
	"/usr/local/sbin"
	"/usr/local/bin"
	"$HOME/.local/bin"
	"$HOME/bin"
)

for ANOTHER_DIR in "${DOTFILES_PREPEND_PATHS[@]}"
do
	if [ -d ${ANOTHER_DIR} ] && [[ ${PATH} != *"${ANOTHER_DIR}"* ]]; then
	    export PATH="${ANOTHER_DIR}:$PATH"
	fi
done



# ------------------------------------------------------------------------
# 2. Append Directories
# ------------------------------------------------------------------------

DOTFILES_APPEND_PATHS=(
	"$HOME/.composer/vendor/bin"
	"/snap/bin"
)

for ANOTHER_DIR in "${DOTFILES_APPEND_PATHS[@]}"
do
	if [ -d ${ANOTHER_DIR} ] && [[ ${PATH} != *"${ANOTHER_DIR}"* ]]; then
	    export PATH="$PATH:${ANOTHER_DIR}"
	fi
done


# ------------------------------------------------------------------------
# 4. Local ~.paths configuration
# ------------------------------------------------------------------------
[[ -f "$HOME/.paths.local" ]] && source "$HOME/.paths.local"


# ------------------------------------------------------------------------
# Outro
# ------------------------------------------------------------------------
unset DOTFILES_PREPEND_PATHS DOTFILES_APPEND_PATHS ANOTHER_DIR;
